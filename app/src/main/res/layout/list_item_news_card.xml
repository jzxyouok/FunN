<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/list_item_videos_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="4dp"
    app:contentPadding="5dp"
    app:cardMaxElevation="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_news_list_head_height">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="@dimen/head_icon_width"
                android:layout_height="@dimen/head_icon_width"
                android:layout_marginLeft="@dimen/list_item_news_list_margin"
                android:src="@drawable/test_icon2"
                android:layout_centerVertical="true"
                app:civ_border_width="1px"
                app:civ_border_color="@color/head_icon_border_color"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/user_info_margin"
                android:layout_toRightOf="@id/profile_image"
                android:gravity="center">
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="匿名用户"
                    android:typeface="serif"
                    android:textColor="@color/gray"
                    />
                <TextView
                    android:id="@+id/publish_time"
                    android:layout_marginTop="@dimen/list_item_news_list_margin"
                    android:layout_below="@id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布于 2015-05-25 12:55"
                    android:typeface="serif"
                    android:textColor="@color/gray"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/list_item_news_list_margin">

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/deep_gray"
                android:textSize="@dimen/medium_text"
                android:textStyle="bold"
                android:text=" "
                android:lineSpacingExtra="3sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <!--android:textColor="@color/black"-->
            <!--android:textSize="@dimen/small_text"-->
            <!--android:text="dfdfdfdfddf"-->
            <!--android:textStyle="normal"-->
            <!--android:typeface="serif"-->
            <!--app:lineSpacing="10sp"-->
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--android:scaleType="fitXY"-->
            <!--android:minWidth="@dimen/imageview_min_width"-->
            <!--android:minHeight="@dimen/imageview_min_height"-->
            <!--android:maxHeight="@dimen/imageview_max_height"-->
            <ImageView
                android:id="@+id/img"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:minWidth="@dimen/imageview_min_width"
                android:minHeight="@dimen/imageview_min_height"
                android:maxHeight="@dimen/imageview_min_height"
                android:visibility="gone"
            />
            <TextView
                android:visibility="gone"
                android:id="@+id/gif_hint"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/gif_hint_height"
                android:text="动图"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:padding="@dimen/gif_hint_padding"
                android:textColor="@color/white"
                android:typeface="serif"
                android:background="@color/gif_hint_bg"/>


            <!--android:maxHeight="@dimen/imageview_max_height"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_alignParentStart="true"-->
        </RelativeLayout>
        <View
            android:id="@+id/share_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:visibility="gone"
            android:background="@color/deep_gray"/>
        <LinearLayout
            android:id="@+id/op_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/share_height"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/list_item_news_list_margin"
            >
            <RelativeLayout
                android:id="@+id/share_btn"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/share_height"
                android:gravity="center">
                <ImageView
                    android:id="@+id/share_image"
                    android:layout_width="@dimen/share_icon_height"
                    android:layout_height="@dimen/share_icon_height"
                    android:src="@drawable/share"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/share_image"
                    android:text="分享"
                    android:layout_marginLeft="@dimen/list_item_news_list_margin"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/small_text"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/share_height"
                android:gravity="center"
                >

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/share_height"
                android:gravity="center"
                >

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>